{
	"name": "crown-clothing",
	"version": "0.1.0",
	"private": true,
	"homepage": "https://royal-clothing.herokuapp.com/",
	"scripts": {
		"start": "react-scripts start",
		"prebuild": "npm run format && npm run lint",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"lint": "eslint .",
		"lint:fix": "eslint --fix",
		"format": "prettier --write \"**/*.+(js|jsx|json|css|md)\"",
		"predeploy": "npm run build",
		"deploy": "gh-pages -d build"
	},
	"dependencies": {
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.5.0",
		"@testing-library/user-event": "^7.2.1",
		"firebase": "^7.12.0",
		"gh-pages": "^2.2.0",
		"node-sass": "^4.13.1",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-redux": "^7.2.0",
		"react-router-dom": "^5.1.2",
		"react-scripts": "3.4.0",
		"react-stripe-checkout": "^2.6.3",
		"redux": "^4.0.5",
		"redux-logger": "^3.0.6",
		"redux-persist": "^6.0.0",
		"redux-saga": "^1.1.3",
		"redux-thunk": "^2.3.0",
		"reselect": "^4.0.0",
		"styled-components": "^5.0.1"
	},
	"devDependencies": {
		"@babel/compat-data": "~7.8.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-react": "^7.19.0",
		"husky": "^4.2.3",
		"lint-staged": "^10.0.8",
		"prettier": "^2.0.1",
		"typescript": "^3.8.3"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"plugin:prettier/recommended"
		],
		"rules": {
			"no-eq-null": "error",
			"no-console": "warn"
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"resolutions": {
		"@babel/preset-env": "^7.8.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.+(js|jsx)": [
			"eslint --fix",
			"git add"
		],
		"*.+(json|css|md)": [
			"prettier --write",
			"git add"
		]
	}
}
